---
/* No necesitamos lógica de servidor aquí */
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Calculadora de Zonas de Entrenamiento</title>

    <!-- CSS global servido desde /public -->
    <link rel="stylesheet" href="/styles.css" />

    <!-- Script de la calculadora, empaquetado por Astro/Vite -->
    <script type="module" src="/src/scripts/trainingCalculator.js"></script>
  </head>
  <body>
    <div class="container">
      <h1>Calculadora de Zonas de Entrenamiento</h1>

      <!-- Formulario para Threshold Pace, Threshold HR y Max HR -->
      <form id="trainingForm">
        <label for="thresholdPace">Threshold Pace (mm:ss):</label>
        <input
          type="text"
          id="thresholdPace"
          placeholder="ej: 5:30"
          required
        />

        <label for="thresholdHR">Threshold HR (bpm):</label>
        <input
          type="number"
          id="thresholdHR"
          placeholder="ej: 175"
          required
        />

        <label for="maxHR">Max HR (bpm):</label>
        <input
          type="number"
          id="maxHR"
          placeholder="ej: 200"
          required
        />

        <button type="submit">Calcular Zonas</button>
      </form>

      <!-- Reporte de Resultados -->
      <div id="result"></div>

      <!-- Botón para Descargar Excel -->
      <button id="downloadBtn" style="display: none" class="download-btn">
        Descargar Excel
      </button>
    </div>
</html>